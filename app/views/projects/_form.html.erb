<div class="container">
    <%= render 'shared/errors' %>
    <div class="row justify-content-center"> 
        <div class="col-8" id="form-background">
            <%= form_with(model: @project, local:true) do |form| %>
                <div class="form-group row">
                    <%= form.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-9">
                         <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of project" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-9"> 
                        <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of project" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label  :start_date, class: "col-2 col-form-label text-light" %>
                    <div class="col-9">
                        <%= form.text_field  :start_date, class: "form-control shadow rounded", placeholder: "Start date" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label  :end_date, class: "col-2 col-form-label text-light" %>
                    <div class="col-9">
                        <%= form.text_field  :end_date, class: "form-control shadow rounded", placeholder: "End date" %>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <%= form.submit class: "btn", value: "Save project", id: "save-button" %>
                </div>
            <% end %>
        </div>
    </div>
            
</div>