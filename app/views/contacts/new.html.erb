<div class="container mt-3 mb-2">
    <div class="row justify-content-center"> 
        <div class="col-8" id="form-background">
            <%= form_with(model: @project, url: contacts_path) do |form| %>
                <div class="form-group row mt-4">
                    <%= form.label :name, class: "col-2 col-form-label text-light" %>
                    <div class="col-9">
                         <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Name" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label :email, class: "col-2 col-form-label text-light" %>
                    <div class="col-9"> 
                        <%= form.text_field :email, class: "form-control shadow rounded", placeholder: "Email" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label :phone, class: "col-2 col-form-label text-light" %>
                    <div class="col-9">
                        <%= form.text_field  :phone, class: "form-control shadow rounded", placeholder: "Phone" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= form.label :message, class: "col-2 col-form-label text-light" %>
                    <div class="col-9">
                        <%= form.text_area :message, rows: 10, class: "form-control shadow rounded", placeholder: "Leave your message..." %>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <%= form.submit class: "btn", value: "Send", id: "send-button" %>
                </div>
            <% end %>
        </div>
    </div>
            
</div>